<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="newTarget"
        android:text="@string/button_create" />

    <TextView
        android:id="@+id/DestName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#024796"
        android:padding="8dip"
        android:textColor="#FFFFFF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageViewCompass"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/content_desc_compass"
            android:src="@drawable/compass_plain" />

        <ImageView
            android:id="@+id/imageViewCompassNeedle"
            android:layout_width="280dp"
            android:layout_centerInParent="true"
            android:layout_height="280dp"
            android:contentDescription="@string/content_desc_compass_needle"
            android:src="@drawable/compass_needle" />
    </RelativeLayout>

</LinearLayout>